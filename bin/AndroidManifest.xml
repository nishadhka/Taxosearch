<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tsqg.game"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
       android:name="com.tsqg.quiz.main.ChuckApplication" >
        <activity
            android:name="com.tsqg.quiz.main.TSQ_wel"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tsqg.maps.MyPreferences"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="com.tsqg.maps.SelectTrackActivity"
            android:label="Select Track"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.tsqg.maps.SelectPOIActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.tsqg.maps.NamePOIActivity"
            android:label="Set POI name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.tsqg.maps.SelectMapActivity"
            android:icon="@drawable/poi"
            android:label="Select Map"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
 
        
        
        <activity   
        android:name="com.tsqg.quiz.main.SplashActivity"
        android:screenOrientation="portrait"/> 
        
        <activity android:name="com.tsqg.maps.FMapsActivity" 
            android:screenOrientation="portrait"/>
        <activity android:name="com.tsqg.quiz.main.QuestionActivity" 
            android:screenOrientation="portrait"/>
        <activity android:name="com.tsqg.quiz.main.QuestionActivity2" 
            android:screenOrientation="portrait"/>
        <activity android:name="com.tsqg.quiz.main.QuestionActivity3" 
            android:screenOrientation="portrait"/>
        <activity android:name="com.tsqg.quiz.main.QuestionActivity4" 
            android:screenOrientation="portrait"/>
		<activity android:name="com.tsqg.quiz.main.RulesActivity"
		    android:screenOrientation="portrait" />
		<activity android:name="com.tsqg.quiz.main.EndgameActivity"
		    android:screenOrientation="portrait" />
		<activity android:name="com.tsqg.quiz.main.SettingsActivity"
		    android:screenOrientation="portrait" />
		<activity android:name="com.tsqg.quiz.main.AnswersActivity"
		    android:screenOrientation="portrait" />
        <service
            android:name="com.fuchs.tracking.TrackerService"
            android:label="Tracker Service" />
    </application>

