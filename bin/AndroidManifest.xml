<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fuchs.maps"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.fuchs.maps.FMapsActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensor" >
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyPreferences"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".SelectTrackActivity"
            android:label="Select Track"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".SelectPOIActivity"
            android:label=""
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".NamePOIActivity"
            android:label="Set POI name"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".SelectMapActivity"
            android:icon="@drawable/poi"
            android:label="Select Map"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
		
        <activity   android:name=".Newactivty" android:label="@string/app_name">  
        <intent-filter> 
        <action android:name="com.fuchs.maps.Newactivty" />  
        <category android:name="android.intent.category.DEFAULT" />  
        </intent-filter>   
        </activity>
        <service
            android:name="com.fuchs.tracking.TrackerService"
            android:label="Tracker Service" />
    </application>

</manifest>